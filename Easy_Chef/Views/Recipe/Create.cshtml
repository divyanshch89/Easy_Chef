@model Easy_Chef.Models.DB.Recipe

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container createrecipe --margintop16">
    <h2>Create Recipe</h2>
    <hr />
    <div class="row">
        <div class="col-md-10">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RecipeName" class="control-label"></label>
                    <input asp-for="RecipeName" class="form-control" />
                    <span asp-validation-for="RecipeName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrepTime" class="control-label"></label>
                    <input asp-for="PrepTime" class="form-control" />
                    <span asp-validation-for="PrepTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DifficultyLevel" class="control-label"></label>
                    <input asp-for="DifficultyLevel" class="form-control" />
                    <span asp-validation-for="DifficultyLevel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SpiceLevel" class="control-label"></label>
                    <input asp-for="SpiceLevel" class="form-control" />
                    <span asp-validation-for="SpiceLevel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsVeg" class="control-label"></label>
                    <input asp-for="IsVeg" class="form-control" />
                    <span asp-validation-for="IsVeg" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image1" class="control-label"></label>
                    <input asp-for="Image1" class="form-control" />
                    <span asp-validation-for="Image1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image2" class="control-label"></label>
                    <input asp-for="Image2" class="form-control" />
                    <span asp-validation-for="Image2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image3" class="control-label"></label>
                    <input asp-for="Image3" class="form-control" />
                    <span asp-validation-for="Image3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CookLimit" class="control-label"></label>
                    <input asp-for="CookLimit" class="form-control" />
                    <span asp-validation-for="CookLimit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShortDescription" class="control-label"></label>
                    <input asp-for="ShortDescription" class="form-control" />
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LongDescription" class="control-label"></label>
                    @*<textarea asp-for="LongDescription" class="form-control"/>*@
                    <input asp-for="LongDescription" class="form-control" />
                    <span asp-validation-for="LongDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NutritionValue" class="control-label"></label>
                    <input asp-for="NutritionValue" class="form-control" />
                    <span asp-validation-for="NutritionValue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BoxContent" class="control-label"></label>
                    <input asp-for="BoxContent" class="form-control" />
                    <span asp-validation-for="BoxContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChefName" class="control-label"></label>
                    <input asp-for="ChefName" class="form-control" />
                    <span asp-validation-for="ChefName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CuisineId" class="control-label"></label>
                    <select asp-for="CuisineId" class="form-control" asp-items="ViewBag.CuisineId"></select>
                </div>
                <div class="row --margintop16">
                    <div class="form-group mx-auto">
                        <a class="btn btn-warning" href="/admin/Recipe">Back to List</a>
                        <input type="submit" value="Create" class="btn btn-primary" />

                    </div>
                </div>
            </form>
        </div>
    </div>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
