@model IEnumerable<Easy_Chef.Models.DB.Recipe>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container table-responsive --margintop16">

    <p><a class="btn btn-primary" asp-action="Create">Create New Recipe</a></p>
    <table class="table table-hover --margintop16">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RecipeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cuisine)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.PrepTime)
                    </th>*@
                @*<th>
                        @Html.DisplayNameFor(model => model.DifficultyLevel)
                    </th>*@
                @*<th>
                        @Html.DisplayNameFor(model => model.SpiceLevel)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShortDescription)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecipeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cuisine.CuisineName)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.PrepTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DifficultyLevel)
                        </td>*@
                    @*<td>
                            @Html.DisplayFor(modelItem => item.SpiceLevel)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShortDescription)
                    </td>

                    <td class="actions">
                        <a asp-action="Edit" asp-route-id="@item.RecipeId"><i class="fa fa-edit"></i></a>

                        <a asp-action="Details" asp-route-id="@item.RecipeId"><i class="fa fa-info"></i></a>

                        <a asp-action="Delete" asp-route-id="@item.RecipeId"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        //for setting nav active
        EasyChef.Utility.setNavActive("adminnav");
    </script>
</div>
